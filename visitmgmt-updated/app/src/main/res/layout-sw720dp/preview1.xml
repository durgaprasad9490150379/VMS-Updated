<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/preview_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@drawable/gradientcolor">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/watermark"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            />


    </RelativeLayout>

    <TextView
        android:id="@+id/code_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checked-In Succesfuly!!"
        android:layout_below="@+id/header"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/code_status"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/id_src"
        />

    <ImageView
        android:id="@+id/img_src"
        android:src="@drawable/user"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/id_src"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/scanQr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_src"
        android:text="Scan QR code to get information"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/scanQr">


    <Button
        android:id="@+id/print"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/otp_btn"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="M-Pass"
        android:textAllCaps="false"
        android:layout_below="@+id/scanQr"
        android:textColor="@android:color/white"
        android:textSize="35dp"
        android:textStyle="bold" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_toRightOf="@+id/print"
            android:background="@drawable/otp_btn"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Cancel"
            android:layout_below="@+id/scanQr"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="35dp"
            android:textStyle="bold" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:background="@drawable/gradientcolor"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered by exzaTech Consulting and Services Pvt Ltd."
            android:textSize="22dp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/forntstyle"
            />

    </LinearLayout>

</RelativeLayout>