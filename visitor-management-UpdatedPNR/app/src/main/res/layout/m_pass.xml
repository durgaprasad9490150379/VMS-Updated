<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mpass"
        android:background="@drawable/linearborder"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:src="@drawable/logomain" />

        <TextView
            android:id="@+id/name"
            android:layout_below="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="30sp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:layout_below="@+id/logo"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:text="Akhil Redddy"
            android:textSize="30sp">
        </TextView>

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_alignRight="@+id/logo"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:text="Mobile No:"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"/>

        <TextView
            android:id="@+id/mobile_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_txt"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/mobile"
            android:text="7659090890"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile"
            android:layout_marginTop="20dp"
            android:text="Host:"
            android:layout_marginStart="50dp"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/host_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile_txt"
            android:layout_toRightOf="@+id/host"
            android:layout_marginLeft="90dp"
            android:text="XXXXXX"
            android:layout_marginTop="20dp"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/Date_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/host"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:text="Date/Time:"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/Date_Time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/host_txt"
            android:layout_toRightOf="@+id/Date_Time"
            android:layout_marginLeft="12dp"
            android:text="XXXXXXXXX"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/purpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Date_Time"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:text="Purpose:"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Date_Time_txt"
            android:layout_toRightOf="@+id/purpose"
            android:layout_marginTop="20dp"
            android:text="XXXXXXX"
            android:textSize="30sp"
            android:layout_marginLeft="40dp"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/userImage"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_launcher_background"/>




        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/userImage"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_launcher_background"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/mpass"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/sendemail"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mpass"
            android:background="@drawable/otp_btn"
            android:text="M-Pass"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@drawable/otp_btn"
            android:text="Cancel"/>



    </LinearLayout>


</RelativeLayout>