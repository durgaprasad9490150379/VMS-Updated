<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ededed"
    android:gravity="center"

    >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"


        >


        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:src="@drawable/logomain" />

        <ImageView
            android:id="@+id/tick"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/logo"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="75dp"
            android:src="@drawable/check" />

        <TextView
            android:id="@+id/says"
            android:layout_below="@+id/tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:textSize="50sp"/>



    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:background="@drawable/gradientcolor"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered by eXzaTech Consulting and Services Pvt Ltd. v1.0"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/forntstyle"
            />

    </LinearLayout>


</RelativeLayout>


