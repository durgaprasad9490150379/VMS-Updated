<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ededed"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@drawable/gradientcolor">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/watermark"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        >

        <LinearLayout
            android:layout_marginRight="200dp"
            android:layout_marginLeft="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <LinearLayout
                android:id="@+id/visitor"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/linearborder"
                android:orientation="vertical"

                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/visitorimg"

                    />
                <TextView
                    android:id="@+id/visitor_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:text="Visitor"
                    android:textStyle="bold"
                    android:fontFamily="@font/forntstyle"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/vendor"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:background="@drawable/linearborder"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/vendor"
                    />
                <TextView
                    android:id="@+id/vendor_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:text="Vendor"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:fontFamily="@font/forntstyle"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    />

            </LinearLayout>


        </LinearLayout>

        <!-- Second Row-->
        <LinearLayout
            android:layout_marginBottom="40dp"
            android:layout_marginRight="200dp"
            android:layout_marginLeft="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <LinearLayout
                android:id="@+id/employee"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/linearborder"
                android:orientation="vertical"

                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/employees"

                    />
                <TextView
                    android:id="@+id/employee_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:text="Employee"
                    android:textStyle="bold"
                    android:fontFamily="@font/forntstyle"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Vehicle"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:background="@drawable/linearborder"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/vehicle"
                    />
                <TextView
                    android:id="@+id/vehicle_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:text="Vehicle"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:fontFamily="@font/forntstyle"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:background="@drawable/gradientcolor"
            android:layout_alignParentBottom="true"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/companyname"
                android:textSize="22dp"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/forntstyle"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
