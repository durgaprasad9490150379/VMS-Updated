<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@drawable/gradientcolor">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/watermark"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            />


    </RelativeLayout>


    <TextView
        android:id="@+id/mobilenumberDisplay"
        android:layout_below="@id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:textSize="30dp"
        android:text="Please enter the verification code that sent to your mobile number"
        android:textColor="#000000"
        android:fontFamily="@font/forntstyle"
        android:textStyle="bold"

        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/digit1"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:hint=""
            android:textSize="50dp"
            android:backgroundTint="#000000"
            android:layout_marginTop="250dp"
            android:fontFamily="@font/forntstyle"
            android:inputType="number"
            android:textStyle="bold"

            />
        <EditText
            android:id="@+id/digit2"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:hint=""
            android:textSize="50dp"
            android:layout_toRightOf="@+id/digit1"
            android:backgroundTint="#000000"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/forntstyle"
            android:inputType="number"
            android:textStyle="bold"

            />
        <EditText
            android:id="@+id/digit3"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:hint=""
            android:textSize="50dp"
            android:layout_toRightOf="@+id/digit2"
            android:backgroundTint="#000000"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/forntstyle"
            android:inputType="number"
            android:textStyle="bold"

            />
        <EditText
            android:id="@+id/digit4"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:hint=""
            android:textSize="50dp"
            android:layout_toRightOf="@+id/digit3"
            android:backgroundTint="#000000"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/forntstyle"
            android:inputType="number"
            android:textStyle="bold"

            />
        <EditText
            android:id="@+id/digit5"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:hint=""
            android:textSize="50dp"
            android:layout_toRightOf="@+id/digit4"
            android:backgroundTint="#000000"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/forntstyle"
            android:inputType="number"
            android:textStyle="bold"

            />
        <EditText
            android:id="@+id/digit6"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:hint=""
            android:textSize="50dp"
            android:layout_toRightOf="@+id/digit5"
            android:backgroundTint="#000000"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/forntstyle"
            android:inputType="number"
            android:textStyle="bold"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/inputnumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        >
        <Button
            android:id="@+id/resend"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/otp_btn"
            android:layout_marginTop="100dp"
            android:text="Resend OTP"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/forntstyle"
            android:layout_marginRight="20dp"
            android:textStyle="bold"

            />
        <Button
            android:id="@+id/verify"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Verify OTP"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:layout_toRightOf="@+id/resend"
            android:background="@drawable/otp_btn"
            android:fontFamily="@font/forntstyle"
            android:textAllCaps="false"
            android:textStyle="bold"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:background="@drawable/gradientcolor"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/companyname"
            android:textSize="22dp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/forntstyle"
            />

    </LinearLayout>



</RelativeLayout>