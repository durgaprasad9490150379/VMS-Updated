<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ededed"
    tools:ignore="MissingDefaultResource">




    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="250dp"
        android:layout_marginBottom="55dp"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logomain"
            android:layout_centerHorizontal="true"

            />

        <Button
            android:id="@+id/check_in_pnr"
            android:layout_below="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Check-In with VisitorId/QR code"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:layout_marginTop="100dp"
            android:background="@drawable/btn_check"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:fontFamily="@font/forntstyle"
            android:textStyle="bold"
            android:gravity="center"

            />

        <Button
            android:id="@+id/check_in"
            android:layout_below="@+id/check_in_pnr"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="New Visitor Check-In"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_check"
            android:singleLine="true"
            android:fontFamily="@font/forntstyle"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"

            />
        <Button
            android:id="@+id/check_out"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Check-Out"
            android:layout_below="@+id/check_in"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textAllCaps="false"

            android:background="@drawable/btn_check"
            android:singleLine="true"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/forntstyle"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            />







    </RelativeLayout>
